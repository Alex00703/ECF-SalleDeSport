{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
    <form method="post" id="login-form">
        {% if error %}
            <div class="error-msg">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        
        <p style="position: relative; bottom: 50px; font-size: 2rem;">Connexion</p>
        <div class="input">
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" placeholder=" " required>
            <label for="inputEmail">Email</label>
        </div>

        <div class="input">
            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" placeholder=" " required>
            <label for="inputPassword">Password</label>
        </div>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        <button class="alert-btn" style="width: 40%;" type="submit">Connexion</button>
    </form>

{% endblock %}
